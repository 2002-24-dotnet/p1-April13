@model PizzaBox.Client.Models.AccountViewModel

<form action="/account/signup" method="post">
  @Html.AntiForgeryToken()

  <label asp-for="@Model.Name">Name</label>
  <input type="text" asp-for="@Model.Name" />
  @Html.ValidationMessageFor(avm => avm.Name)

  <label asp-for="@Model.Email">Email</label>
  <input type="email" asp-for="@Model.Email" />
  @Html.ValidationMessageFor(avm => avm.Email)

  <label asp-for="@Model.Password">Password</label>
  <input type="password" asp-for="@Model.Password" />
  @Html.ValidationMessageFor(avm => avm.Password)

  <label asp-for="@Model.PhoneNum">Phone Number</label>
  <input type="tel" asp-for="@Model.PhoneNum" />
  @Html.ValidationMessageFor(avm => avm.PhoneNum)

  <label asp-for="@Model.Address">Address</label>
  <input type="text" asp-for="@Model.Address" />

  @Html.RadioButtonFor(avm => avm.IsUser, true, new { id = "user" })
  @Html.Label("user", "Customer")

  @Html.RadioButtonFor(avm => avm.IsUser, false, new { id = "store" })
  @Html.Label("store", "Store")

  <button type="reset">Clear</button>
  <button type="submit">Login</button>
</form>
