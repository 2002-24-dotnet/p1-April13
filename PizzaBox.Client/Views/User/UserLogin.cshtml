@model PizzaBox.Client.Models.LoginViewModel

<h1>Customer Login</h1>
<form action="/user/userlogin" method="post">
  @Html.AntiForgeryToken()

  <label asp-for="@Model.Email">Email</label>
  <input type="text" asp-for="@Model.Email" />
  @Html.ValidationMessageFor(lvm => lvm.Email)

  <label asp-for="@Model.Password">Password</label>
  <input type="password" asp-for="@Model.Password" />
  @Html.ValidationMessageFor(lvm => lvm.Password)

  <button type="reset">Clear</button>
  <button type="submit">Login</button>
</form>
