@model PizzaBox.Domain.Models.Order

<h1>Order Submitted!</h1>

<p>Order #@Model.Id</p>
<p>
  Store: @Model.Store.Name (@Model.Store.Address) <br/>
  Submitted: @Html.DisplayTextFor(o => o.date)
</p>

<p>
  Pizzas Ordered <br/>
  <ul>
    @foreach (var p in @Model.Pizzas)
    {
      <li>@p.Name @p.Price</li>
    }
  </ul>
</p>
<p>Total: $@Model.Price</p>

@Html.ActionLink("Done", "UserHome", new { id = @Model.User.Id })
<a href="/account/logout">Logout</a>